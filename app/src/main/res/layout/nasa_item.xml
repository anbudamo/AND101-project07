<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/nasa_image"
        android:layout_width="200dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_textView"
        android:layout_width="185dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/michroma"
        android:textColor="#5d00ff"
        android:textSize="10dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/nasa_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date_textView"
        android:layout_width="185dp"
        android:layout_height="20dp"
        android:layout_marginLeft="8dp"
        android:fontFamily="sans-serif"
        android:textSize="12dp"
        app:layout_constraintLeft_toRightOf="@+id/nasa_image"
        app:layout_constraintTop_toBottomOf="@+id/title_textView" />

    <TextView
        android:id="@+id/explanation_textView"
        android:layout_width="183dp"
        android:layout_height="59dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/magra"
        android:textAppearance="@style/TextAppearance.Quote"
        app:layout_constraintLeft_toRightOf="@+id/nasa_image"
        app:layout_constraintTop_toBottomOf="@+id/date_textView" />

</androidx.constraintlayout.widget.ConstraintLayout>